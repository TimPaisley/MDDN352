<% exhibit_id = params[:ex] %>
<% display_id = params[:id] %>

<div class="center jumbotron" style="background: url(<%= asset_path('display-images/' + display_id + '.jpg') %>)">
	<h1><%= parse_display(exhibit_id, display_id, 'title') %></h1>
	<h2><%= parse_display(exhibit_id, display_id, 'subText') %></h2>
</div>

<p>Exhibit: <span class='text-muted'><%= parse_display(exhibit_id, display_id, 'exhibit') %></span></p>

<% para = parse_display(exhibit_id, display_id, 'paragraph') %>
	
<% para.each do |para| %>
	<% unless para['title'] == 'NULL' %>
		<h3><%= para['title'] %></h3>
	<% end %>
	<p><%= para['text'] %></p>
<% end %>